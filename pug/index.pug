                                .circs__img
                                    img(src="img/circs-"+(i+1)+"-g.svg", alt="")
                                span !{item}

                .author__form
                    form.form(action="send.php")
                        input(type="hidden", name="subject" value="Форма - получите актуальные условия участия в программе")
